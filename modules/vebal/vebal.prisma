model PrismaVeBalUserBalance {
    @@id([id, chain])

    id                  String
    chain               Chain

    balance             String

    userAddress         String
    user                PrismaUser          @relation(fields:[userAddress], references: [address])

}

model PrismaVeBalTotalSupply {
    @@id([address, chain])

    address             String
    chain               Chain

    totalSupply         String
}

enum PrismaRootStakingGaugeStatus {
    KILLED
    ACTIVE
}

model PrismaRootStakingGauge {
  @@id([id, chain])
  @@unique([stakingId, chain])

  id      String
  chain   Chain

  staking           PrismaPoolStakingGauge? @relation(fields: [stakingId, chain], references: [id, chain])
  status            PrismaRootStakingGaugeStatus @default(ACTIVE)
  gaugeAddress      String
  stakingId         String?
  relativeWeight    String?
  relativeWeightCap String?
}
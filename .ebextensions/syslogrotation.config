files:  
  "/etc/logrotate.d/syslog": 
    mode: "000600"
    owner: root
    group: root
    content: |
    /var/log/cron
    /var/log/maillog
    /var/log/messages
    /var/log/secure
    /var/log/spooler
    {
        daily
        rotate 7
        missingok
        compress
        sharedscripts
        dateext
        dateformat %s
        postrotate
            /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
        endscript
    }
